{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "functions",
    "rootDir": "src/functions",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/functions/**/*", "src/types/**/*"],
  "exclude": ["functions/**/*"]
}
